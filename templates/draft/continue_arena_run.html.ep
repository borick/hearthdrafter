% layout 'default';
% my $runs = stash 'runs';
% for my $run (@$runs) {
     <table><tr><th>Start Date/Time</th><th>Class</th><th>Actions</th>
            </tr><td><%= $run->{_source}->{start_date} %>
            </td><td><%= $run->{_source}->{class_name} %>
            </td><td><a href="/draft/select_card/<%= $run->{_id} %>/">Continue Run</a>|
                     <a href="/draft/arena_action/abandon_arena_<%= $run->{_id} %>/">Abandon Run</a>
            </td>
     </table>
% }